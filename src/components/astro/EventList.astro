---
import EventCard from './EventCard.astro';
import type { Event } from '@/lib/events';

interface Props {
  events: Event[];
  translations: {
    speaker: string;
    date: string;
    time: string;
    upcomingBadge: string;
  };
  emptyMessage: string;
  lang: string;
}

const { events, translations, emptyMessage, lang } = Astro.props;
---

{events.length === 0 ? (
  <p class="text-muted-foreground text-center py-8">{emptyMessage}</p>
) : (
  <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    {events.map((event) => (
      <EventCard event={event} translations={translations} lang={lang} />
    ))}
  </div>
)}
